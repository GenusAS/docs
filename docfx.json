{
  "build": {
    "content": [
      {
        "files": [
          "**.*md",
          "**.*yml"
        ],
        "exclude": [
          "_site/**",
          "**/node_modules/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/*.jpg",
          "**/*.gif",
          "**/*.png",
          "**/*.ico",
          "**/*.pdf",
          "**/404redirect.html",
          "**/*.config"
        ],
        "exclude": [
          "_site/**",
          "**/node_modules/**"
        ]
      }
    ],
    "globalMetadata": {
      "_enableSearch": true,
      "_appTitle": "Genus Docs",
      "_appName": "Genus Docs",
      "_appFaviconPath": "genus_favicon.ico",
      "_appLogoPath": "genus_logo.png",
      "_appFooter": "&copy; Copyright <a href=\"http://www.genus.no\">Genus AS</a>, Norway. All rights reserved.",
      "_enableNewTab": true
    },
    "fileMetadata": {
      "_noindex": {
        "developers/how-to/consuming-a-web-service-from-microsoft-visual-studio--code-example.md": true,
        "guidelines-for-html-table-conversion.md": true,
        "editing-docs-locally.md": true,
        "example-article.md": true,
        "metadata-for-search-engine-optimization.md": true,
        "template-article.md": true,
        "github-contribution-code-and-custom-template.md": true
      }
    },
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "_custom_templates/genus_template" //custom template overriding default template
    ],
    "postProcessors": ["ExtractSearchIndex"],
    "noLangKeyword": false,
    "sitemap": {
      "baseUrl": "https://docs.genus.no/",
      "changefreq": "daily"
    }
  }
}
